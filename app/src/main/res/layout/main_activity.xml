<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".MainActivity"
    tools:ignore="DuplicateIds">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENTER PRODUCT CODE OR PRESS SCAN" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnMainCkCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickCheckWithCode"
            android:text="CHECK WITH CODE" />

        <Button
            android:id="@+id/btnMainChkScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickCheckWithScan"
            android:text="CHECK WITH SCAN" />

        <ListView
            android:id="@+id/lstvProducts"
            android:layout_width="match_parent"
            android:layout_height="396dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMainAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:baselineAlignBottom="false"
            android:clickable="false"
            android:src="@android:drawable/ic_input_add"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>
</RelativeLayout>
